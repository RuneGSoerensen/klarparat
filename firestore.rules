rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is accessing their own document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if only completion status is being updated
    function isCompletionUpdate() {
      return request.resource.data.diff(resource.data).affectedKeys().hasOnly(['completed', 'updatedAt']);
    }

    // Users collection rules
    match /users/{userId} {
      // Anyone can read user documents (needed for role checks)
      allow read: if isAuthenticated();
      
      // Users can only create/update their own document
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) && 
        // Only allow updating specific fields
        request.resource.data.diff(resource.data).affectedKeys()
          .hasOnly(['name', 'email']);
      
      // Only admins can update the role field
      allow update: if isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['role']);
    }

    // Days collection rules
    match /days/{date} {
      // Anyone authenticated can read days
      allow read: if isAuthenticated();
      // Only admins can create/update/delete days
      allow create, update, delete: if isAdmin();
    }

    // Tasks collection rules
    match /tasks/{taskId} {
      // Anyone authenticated can read tasks
      allow read: if isAuthenticated();
      // Allow authenticated users to update only the completion status
      allow update: if isAuthenticated() && isCompletionUpdate();
      // Only admins can create/delete tasks and make other updates
      allow create, delete: if isAdmin();
      allow update: if isAdmin();
    }

    // Messages collection rules
    match /messages/{messageId} {
      // Anyone authenticated can read messages
      allow read: if isAuthenticated();
      // Anyone authenticated can create messages
      allow create: if isAuthenticated() &&
        request.resource.data.keys().hasAll(['sender', 'content', 'timestamp']) &&
        request.resource.data.sender is string &&
        request.resource.data.content is string;
      // Only admins can delete messages
      allow delete: if isAdmin();
    }

    // Gallery collection rules
    match /gallery/{imageId} {
      // Anyone authenticated can read images
      allow read: if isAuthenticated();
      // Anyone authenticated can upload images
      allow create: if isAuthenticated();
      // Only admins can delete images
      allow delete: if isAdmin();
      // Only admins can update images (optional, usually not needed)
      allow update: if isAdmin();
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
