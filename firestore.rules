rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow reading users document for authentication
    match /settings/users {
      allow read: if true;     // clients may fetch user data for login
      allow write: if false;   // no client-side writes ever
    }

    // Everything else is fully locked down:
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
